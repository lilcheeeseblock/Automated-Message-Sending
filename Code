import pyautogui as pa
import time
import os

#opens discord and waits for it to start
pa.press('win')
time.sleep(1)
pa.typewrite('discord')
time.sleep(1.5)
pa.press('enter')
time.sleep(12)

#uses discord shortcut 'control + t' to search for user
pa.hotkey('ctrl','t')
time.sleep(1.5)
pa.typewrite('username')
time.sleep(1.5)
pa.press('enter')
time.sleep(1.5)

#types selected msg and sends
pa.typewrite('chosen msg')
time.sleep(0.5)
pa.press('enter')
